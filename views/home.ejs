<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <script src="/javascript/jquery.min.js"></script>
    <title>Document</title>
</head>
<body>
    <div>
        <h1>Câu hỏi:</h1>
        <div id="timer">The quiz closes in <span id="time">30:00</span> minutes!</div>
    </div>
    <div class="container">
        <div class="btn-group-vertical">
            <div class="btn-group">
                <button id="btn-1" class="btn btn-secondary">1</button>
                <button id="btn-2" class="btn btn-secondary">2</button>
                <button id="btn-3" class="btn btn-secondary">3</button>
                <button id="btn-4" class="btn btn-secondary">4</button>
                <button id="btn-5" class="btn btn-secondary">5</button>
                <button id="btn-6" class="btn btn-secondary">6</button>
                <button id="btn-7" class="btn btn-secondary">7</button>
                <button id="btn-8" class="btn btn-secondary">8</button>
                <button id="btn-9" class="btn btn-secondary">9</button>
                <button id="btn-10" class="btn btn-secondary">10</button>
            </div>
            <div class="btn-group">
                <button id="btn-11" class="btn btn-secondary">11</button>
                <button id="btn-12" class="btn btn-secondary">12</button>
                <button id="btn-13" class="btn btn-secondary">13</button>
                <button id="btn-14" class="btn btn-secondary">14</button>
                <button id="btn-15" class="btn btn-secondary">15</button>
                <button id="btn-16" class="btn btn-secondary">16</button>
                <button id="btn-17" class="btn btn-secondary">17</button>
                <button id="btn-18" class="btn btn-secondary">18</button>
                <button id="btn-19" class="btn btn-secondary">19</button>
                <button id="btn-20" class="btn btn-secondary">20</button>
            </div>
            <div class="btn-group">
                <button id="btn-21" class="btn btn-secondary">21</button>
                <button id="btn-22" class="btn btn-secondary">22</button>
                <button id="btn-23" class="btn btn-secondary">23</button>
                <button id="btn-24" class="btn btn-secondary">24</button>
                <button id="btn-25" class="btn btn-secondary">25</button>
                <button id="btn-26" class="btn btn-secondary">26</button>
                <button id="btn-27" class="btn btn-secondary">27</button>
                <button id="btn-28" class="btn btn-secondary">28</button>
                <button id="btn-29" class="btn btn-secondary">29</button>
                <button id="btn-30" class="btn btn-secondary">30</button>
            </div>
        </div>
    </div>
    <ul>
        <% data.forEach(function(item) { %>
            <div class="quiz-section-title container p-3 my-3 border">
                <li id="quiz-content" class="question-<%= item.QuestionNum %>"><%= item.QuestionNum %>. <%= item.Question %> </li>
            </div>
            <div class="quiz-section-content container p-3 my-3 border">
                <ul>
                    <li class="list-item"> 
                        <label class="overlabel">
                            <input type="radio" name="radios-<%= item.QuestionNum %>" class="<%= item.QuestionNum %>-1" value="1">
                        </label>
                        <div class="box-check">
                            <div class="answer-desc text-view"></div>
                            <p class="answer-<%= item.QuestionNum %>-1"><%= item.Answer1 %></p>
                        </div>
                    </li>
                    <li class="list-item">
                        <label class="overlabel">
                            <input type="radio" name="radios-<%= item.QuestionNum %>" class="<%= item.QuestionNum %>-2" value="2">
                        </label> 
                        <div class="box-check">
                            <div class="answer-desc text-view"></div>
                            <p class="answer-<%= item.QuestionNum %>-2"><%= item.Answer2 %></p>
                        </div>
                    </li>
                    <li class="list-item">
                        <label class="overlabel">
                            <input type="radio" name="radios-<%= item.QuestionNum %>" class="<%= item.QuestionNum %>-3" value="3">
                        </label>
                        <div class="box-check">
                            <div class="answer-desc text-view"></div>
                            <p class="answer-<%= item.QuestionNum %>-3"><%= item.Answer3 %></p>
                        </div>
                    </li>
                    <li class="list-item">
                        <label class="overlabel">
                            <input type="radio" name="radios-<%= item.QuestionNum %>" class="<%= item.QuestionNum %>-4" value="4">
                        </label>
                        <div class="box-check">
                            <div class="answer-desc text-view"></div>
                            <p class="answer-<%= item.QuestionNum %>-4"><%= item.Answer4 %></p>
                        </div>
                    </li>
                </ul>
            </div>
        <% }) %>
    </ul>
    <button class="next">Next</button>
    <button id="hidden" class="submit">Submit</button>
    <button id="hidden" class="evaluate">Evaluate</button>
    <script type="text/javascript" src="/javascript/index.js"></script>
</body>
</html>